{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1 class="ml-5 mb-5">Annonces</h1>
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id #</th>
                    <td>{{ annonce.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ annonce.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ annonce.slug }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ annonce.content | raw }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ annonce.active ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="my-3">
            <a class="btn shadow-1 rounded-1 small secondary" href="{{ path('offers_index') }}">back to list</a>
            <a class=" shadow-1 rounded-1 small primary" href="{{ path('offers_edit', {'id': annonce.id}) }}">edit</a>
        </div>
    {{ include('offers/_delete_form.html.twig') }}
    </div>
{% endblock %}
