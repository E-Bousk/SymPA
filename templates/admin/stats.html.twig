{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/chart.min.js') }}"></script>
    <script src="{{ asset('assets/js/chartStats.js') }}"></script>
{% endblock %}

{% block body %}
<h1 class="ml-5 mb-5">Statistiques</h1>
<div class="mb-5 container grix xs2">
    <div id="dataCategoriesToJS" data-category-name="{{ categoryName }}" data-category-color="{{ categoryColor }}" data-category-count="{{ categoryCount }}">
        <canvas id="categoriesChart"></canvas>
    </div>
    <div id="dataOffersToJS" data-offers-date="{{ offersDate }}" data-offers-count="{{ offersCount }}">
        <canvas id="offersChart"></canvas>
    </div>
</div>


{% endblock %}
