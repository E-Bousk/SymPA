{% extends 'users.html.twig' %}

{% block title %}modification du mot de passe de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
	<div class="grix xs4 container">
        <div class="col-xs4">
            {% for error in app.flashes('error') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-1 red light-4 txt-red txt-dark-4">{{ error }}</div>
            </div>
            {% endfor %}
            <h1>Modification du mot de passe {{ app.user.firstname }} {{ app.user.name }}</h1>
            <form method="post">
                <div class="form-field">
                  <label for="currentPass">Mot de passe actuel</label>
                  <input type="password" id="currentPass" name="currentPass" class="form-control rounded-1"/>
                </div>
                <div class="form-field">
                  <label for="pass1">Nouveau mot de passe</label>
                  <input type="password" id="pass1" name="pass1" class="form-control rounded-1"/>
                </div>
                <div class="form-field">
                  <label for="pass2">Confirmer le nouveau mot de passe</label>
                  <input type="password" id="pass2" name="pass2" class="form-control rounded-1"/>
                </div>
              <button class="btn shadow-1 rounded-1 blue">Valider</button>
            </form>
        </div>
	</div>
{% endblock %}
